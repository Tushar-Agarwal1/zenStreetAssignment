{
  "compilerOptions": {
      "target": "ES6",                         // Set the JavaScript version to which TypeScript code will be compiled
      "module": "commonjs",                    // Specify the module code generation
      "strict": true,                          // Enable all strict type-checking options
      "esModuleInterop": true,                 // Enable compatibility with ES6 modules
      "skipLibCheck": true,                    // Skip type checking of declaration files
      "outDir": "./dist",                      // Redirect output structure to the 'dist' directory
      "rootDir": "./src"   ,
      "moduleResolution": "node"                    // Specify the root directory of input files
  },
  "include": ["src/**/*.ts"],                  // Include all TypeScript files in the 'src' directory
  "exclude": ["node_modules"]                  // Exclude the 'node_modules' directory
}

